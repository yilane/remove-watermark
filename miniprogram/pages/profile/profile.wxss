/* pages/profile/profile.wxss */
.container {
  min-height: 100vh;
  background-color: #f7f7f7;
}

.user-section {
  background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
  padding: 120rpx 48rpx 80rpx;
  text-align: center;
  color: #ffffff;
}

.user-avatar-placeholder {
  width: 128rpx;
  height: 128rpx;
  border-radius: 64rpx;
  background-color: #ffffff;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
  margin: 0 auto 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.user-avatar-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #6366f1;
}

.user-name {
  display: block;
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.user-stats {
  display: block;
  font-size: 28rpx;
  opacity: 0.8;
}

.menu-section {
  margin: 32rpx;
  background: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
}

.menu-text {
  font-size: 32rpx;
  color: #374151;
}

.arrow-right {
  font-size: 24rpx;
  color: #9ca3af;
}

.logout-section {
  margin: 64rpx 32rpx 32rpx;
}

.logout-btn {
  width: 100%;
  background: #ffffff;
  color: #ef4444;
  font-size: 32rpx;
  font-weight: 600;
  padding: 32rpx;
  border-radius: 20rpx;
  border: none;
} 