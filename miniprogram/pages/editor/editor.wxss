/* pages/editor/editor.wxss */
.container {
  padding: 40rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  color: #333;
}

.content {
  text-align: center;
  color: #666;
  font-size: 28rpx;
}

/* 编辑器容器 */
.editor-container {
  height: 100vh;
  background-color: #1f2937;
  display: flex;
  flex-direction: column;
  position: relative;
}

/* 顶部导航 */
.editor-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  background-color: rgba(31, 41, 55, 0.9);
  backdrop-filter: blur(20rpx);
  border-bottom: 1rpx solid #374151;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  height: 88rpx;
}

.header-left,
.header-right {
  display: flex;
  align-items: center;
  color: #fff;
  font-size: 28rpx;
}

.header-left:active,
.header-right:active {
  opacity: 0.7;
}

.back-icon,
.save-icon {
  margin-right: 8rpx;
}

.header-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
}

/* 画布区域 */
.canvas-area {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 120rpx 24rpx 340rpx;
  margin-top: 88rpx;
  background-image: 
    linear-gradient(45deg, rgba(107, 114, 128, 0.1) 25%, transparent 25%), 
    linear-gradient(-45deg, rgba(107, 114, 128, 0.1) 25%, transparent 25%), 
    linear-gradient(45deg, transparent 75%, rgba(107, 114, 128, 0.1) 75%), 
    linear-gradient(-45deg, transparent 75%, rgba(107, 114, 128, 0.1) 75%);
  background-size: 30rpx 30rpx;
  background-position: 0 0, 0 15rpx, 15rpx -15rpx, -15rpx 0;
}

.canvas-container {
  position: relative;
  max-width: 600rpx;
  max-height: 600rpx;
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

.original-image,
.draw-canvas,
.mask-canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.original-image {
  background-color: #fff;
  border-radius: 16rpx;
}

.draw-canvas {
  pointer-events: auto;
  z-index: 10;
}

.mask-canvas {
  z-index: 5;
  background-color: rgba(239, 68, 68, 0.3);
  mix-blend-mode: multiply;
}

/* 模型选择 */
.model-selection {
  background-color: #374151;
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #4b5563;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  bottom: 320rpx;
  left: 0;
  right: 0;
  z-index: 90;
}

.model-label {
  font-size: 24rpx;
  font-weight: 500;
  color: #d1d5db;
}

.model-tabs {
  display: flex;
  background-color: #4b5563;
  border-radius: 8rpx;
  padding: 4rpx;
}

.model-tab {
  padding: 16rpx 32rpx;
  font-size: 24rpx;
  color: #d1d5db;
  border-radius: 6rpx;
  transition: all 0.2s ease;
}

.model-tab.active {
  background-color: #0052d9;
  color: #fff;
}

/* 底部工具栏 */
.bottom-toolbar {
  background-color: rgba(55, 65, 81, 0.9);
  backdrop-filter: blur(20rpx);
  border-top: 1rpx solid #4b5563;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  padding: 24rpx;
}

/* 绘制工具 */
.tools-section {
  display: flex;
  justify-content: space-around;
  margin-bottom: 24rpx;
  border-bottom: 1rpx solid #4b5563;
  padding-bottom: 24rpx;
}

.tool-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #9ca3af;
  transition: all 0.2s ease;
}

.tool-item.active {
  color: #0052d9;
}

.tool-item:active {
  transform: scale(0.95);
}

.tool-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.tool-text {
  font-size: 20rpx;
}

/* 画笔控制 */
.brush-control {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 0 16rpx;
}

.brush-label {
  font-size: 24rpx;
  color: #d1d5db;
  margin-right: 24rpx;
  min-width: 80rpx;
}

.brush-slider {
  flex: 1;
  margin-right: 24rpx;
}

.brush-preview {
  background-color: #0052d9;
  border-radius: 50%;
  min-width: 12rpx;
  min-height: 12rpx;
  max-width: 100rpx;
  max-height: 100rpx;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 16rpx;
}

.preview-btn,
.process-btn {
  flex: 1;
  border-radius: 12rpx !important;
  font-weight: 500 !important;
}

.preview-btn {
  background-color: #4b5563 !important;
  color: #fff !important;
}

.process-btn {
  background-color: #0052d9 !important;
}

/* 进度弹窗 */
.progress-content {
  padding: 32rpx;
  text-align: center;
}

.progress-text {
  display: block;
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #6b7280;
}
