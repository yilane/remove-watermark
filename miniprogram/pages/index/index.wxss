/* pages/index/index.wxss */
.container {
  padding: 32rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.header {
  text-align: center;
  color: white;
  margin-bottom: 60rpx;
}

.logo {
  margin-bottom: 30rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

.main-content {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.quick-start {
  margin-bottom: 40rpx;
}

.button-content {
  display: flex;
  align-items: center;
  justify-content: center;
}

.button-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.button-text {
  font-size: 32rpx;
  font-weight: 500;
}

.features {
  display: flex;
  justify-content: space-around;
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.08);
}

.feature-item {
  text-align: center;
  flex: 1;
}

.feature-icon {
  font-size: 48rpx;
  display: block;
  margin-bottom: 16rpx;
}

.feature-text {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 500;
}

.user-section {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 30rpx;
  text-align: center;
}

.user-info {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 30rpx;
  text-align: center;
}

.welcome {
  color: #333;
  font-size: 28rpx;
}

/* 横幅样式 */
.banner {
  background: linear-gradient(135deg, #0052d9 0%, #366ef4 100%);
  border-radius: 32rpx;
  padding: 48rpx;
  text-align: center;
  color: white;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 82, 217, 0.3);
}

.banner-icon {
  margin-bottom: 24rpx;
}

.banner-icon .icon {
  font-size: 64rpx;
}

.banner-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.banner-subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 32rpx;
}

.start-btn {
  background-color: white !important;
  color: #0052d9 !important;
  border-radius: 48rpx !important;
  font-weight: bold !important;
  box-shadow: 0 4rpx 16rpx rgba(255, 255, 255, 0.3);
}

/* 最近作品 */
.recent-works {
  margin-bottom: 32rpx;
}

.section-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 24rpx;
}

.works-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.work-item {
  background-color: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s ease;
}

.work-item:active {
  transform: scale(0.98);
}

.work-image {
  width: 100%;
  height: 192rpx;
}

.work-info {
  padding: 24rpx;
}

.work-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 8rpx;
}

.work-date {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 0;
  color: #9ca3af;
}

.empty-icon {
  font-size: 96rpx;
  display: block;
  margin-bottom: 24rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  color: #6b7280;
}

.empty-desc {
  font-size: 28rpx;
}
