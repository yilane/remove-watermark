/* pages/index/index.wxss */
.container {
  min-height: 100vh;
  background-color: #f7f7f7;
  padding: 32rpx;
}

/* 顶部用户信息区域 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 48rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar-placeholder {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 24rpx;
  background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-text {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
}

.greeting {
  display: flex;
  flex-direction: column;
}

.welcome {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 4rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #6b7280;
}

.notification {
  position: relative;
  padding: 12rpx;
}

.bell-icon {
  font-size: 32rpx;
  color: #6b7280;
}

.notification-badge {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 16rpx;
  height: 16rpx;
  background-color: #ef4444;
  border-radius: 50%;
}

/* 主功能卡片 */
.main-card {
  background: #ffffff;
  border-radius: 32rpx;
  padding: 48rpx;
  text-align: center;
  margin-bottom: 48rpx;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.1);
}

.card-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.card-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 16rpx;
}

.card-description {
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 48rpx;
  line-height: 1.5;
}

.start-btn {
  background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
  color: #ffffff;
  border-radius: 32rpx;
  font-size: 32rpx;
  font-weight: 600;
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(37, 99, 235, 0.2);
}

.btn-icon {
  font-size: 24rpx;
  margin-right: 16rpx;
}

/* 最近记录区域 */
.recent-section {
  margin-bottom: 40rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
}

.view-all {
  font-size: 28rpx;
  color: #2563eb;
  font-weight: 600;
}

/* 历史记录列表 */
.history-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.history-item {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.1);
}

.history-thumb {
  width: 128rpx;
  height: 128rpx;
  border-radius: 16rpx;
  margin-right: 32rpx;
  background-color: #f3f4f6;
}

.history-info {
  flex: 1;
  margin-right: 24rpx;
}

.history-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 8rpx;
  display: block;
}

.history-time {
  font-size: 24rpx;
  color: #9ca3af;
  display: block;
}

.action-btn {
  background: #dbeafe;
  color: #2563eb;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 600;
  padding: 12rpx 24rpx;
  border: none;
  white-space: nowrap;
}

.action-btn:hover {
  background: #bfdbfe;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #9ca3af;
  margin-bottom: 40rpx;
}

.start-first-btn {
  width: 280rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
  color: #ffffff;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(37, 99, 235, 0.3);
} 