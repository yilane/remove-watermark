<!--pages/login/login.wxml-->
<view class="login-container">
  <!-- 登录内容 -->
  <view class="login-content">
    <!-- 微信登录按钮 -->
    <t-button 
      theme="primary" 
      size="large"
      bind:tap="wxLogin"
      loading="{{loginLoading}}"
      class="login-btn"
    >
      {{loginLoading ? '登录中...' : '微信快速登录'}}
    </t-button>
  </view>
</view>
