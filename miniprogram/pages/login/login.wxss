/* pages/login/login.wxss */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 80rpx;
  position: relative;
  overflow: hidden;
}

/* Logo区域 */
.logo-section {
  text-align: center;
  margin-bottom: 240rpx;
  z-index: 2;
}

.logo-placeholder {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  border-radius: 40rpx;
  background-color: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
}

.logo-text {
  font-size: 80rpx;
  font-weight: bold;
  color: #ffffff;
  text-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
}

.app-name {
  display: block;
  font-size: 72rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
  text-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
}

.app-slogan {
  display: block;
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 300;
}

/* 登录区域 */
.login-section {
  width: 100%;
  z-index: 2;
}

.wechat-login-btn {
  width: 100%;
  height: 100rpx;
  background: #07c160;
  color: #ffffff;
  border-radius: 50rpx;
  font-size: 34rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(7, 193, 96, 0.3);
  border: none;
  position: relative;
  overflow: hidden;
}

.wechat-login-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.6s;
}

.wechat-login-btn:active::before {
  left: 100%;
}

.wechat-login-btn:disabled {
  opacity: 0.7;
}

.wechat-icon {
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 16rpx;
  color: #07c160;
}

/* 隐私提示 */
.privacy-tips {
  text-align: center;
  margin-top: 60rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.5;
}

.privacy-tips .link {
  color: #ffffff;
  text-decoration: underline;
  font-weight: 500;
}

/* 底部装饰 */
.bottom-decoration {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 300rpx;
  z-index: 1;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(5rpx);
}

.circle-1 {
  width: 200rpx;
  height: 200rpx;
  bottom: -100rpx;
  left: -100rpx;
  animation: float 6s ease-in-out infinite;
}

.circle-2 {
  width: 150rpx;
  height: 150rpx;
  bottom: 50rpx;
  right: -75rpx;
  animation: float 8s ease-in-out infinite reverse;
}

.circle-3 {
  width: 100rpx;
  height: 100rpx;
  bottom: 200rpx;
  left: 50rpx;
  animation: float 10s ease-in-out infinite;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0px) rotate(0deg);
  }
  50% {
    transform: translateY(-20rpx) rotate(180deg);
  }
}

/* 按钮按下效果 */
.wechat-login-btn:active {
  transform: scale(0.98);
  transition: transform 0.1s;
}

/* 适配不同屏幕 */
@media (max-height: 800rpx) {
  .login-container {
    padding: 80rpx 60rpx;
  }
  
  .logo-section {
    margin-bottom: 160rpx;
  }
  
  .logo {
    width: 160rpx;
    height: 160rpx;
  }
  
  .app-name {
    font-size: 60rpx;
  }
} 