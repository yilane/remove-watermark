/* pages/login/login.wxss */

/* 登录容器 - 全屏居中 */
.login-container {
  width: 100vw;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f8f9fa;
}

/* 登录内容 */
.login-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

/* 微信登录按钮 */
.login-btn {
  width: 400rpx;
  height: 96rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 500;
}
